<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="127dp"
        android:text="Account: 312"
        app:layout_constraintBottom_toTopOf="@+id/prices"
        app:layout_constraintEnd_toEndOf="@+id/rwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/prices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="253dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/r"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="46dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/prices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prices"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rwd"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/r"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/r"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="calculate the balance after purchase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prices"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>